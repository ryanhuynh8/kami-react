// Use this file as a starting point for your project's .eslintrc.
// Copy this file, and add rule overrides as needed.
{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "rules": {
    "linebreak-style":"off",
    "indent": ["error", 4],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/prop-types": "off", // TODO: temp off
    "react/jsx-indent-props": "4",
    "react/jsx-indent": "4",
    "react/require-default-props": "off",
    "import/no-mutable-exports": "off", // ONLY for Internet Banking due to Feature switch
    "react/prefer-stateless-function": ["off"],
    "max-len": "off",
    "jsx-a11y/anchor-is-valid": "off", // disable so <Link to=/> works
    "arrow-parens": "off",
    "import/prefer-default-export": "off",
    "no-use-before-define": ["error", { "functions": false, "classes": false }],
    "no-param-reassign": "off",
    "import/no-named-as-default": "off",
    "react/no-unescaped-entities": ["error", {"forbid": [">", "}"]}],
    "no-console": "off", // DON'T TRY TO TELL ME WHAT TO DO!
    "no-unused-expressions": "off",
    "jsx-a11y/href-no-hash": "off",
    "jsx-a11y/label-has-for": "off",
    "jsx-a11y/anchor-has-content": "off",
    "react/jsx-closing-bracket-location": "off",
    "function-paren-newline": "off"

  },
  "env": {
    "browser": true,
    "jest/globals": true
  },
  "plugins": ["jest"]
}
